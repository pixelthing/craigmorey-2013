<!doctype html>
<html>
  <head>
    <meta charset="utf-8" />
    <title><%= current_page.data.title || "Craig Morey - web and UX developer in London" %></title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <%= stylesheet_link_tag "common", :media => "screen" %>
    <%= stylesheet_link_tag "mobile", :media => "screen AND (max-width: 599px)" %>
    <%= stylesheet_link_tag "small-tablet", :media => "screen AND (min-width: 600px)" %>
    <%= stylesheet_link_tag "tablet", :media => "screen AND (min-width: 768px)" %>
    <%= stylesheet_link_tag "desktop", :media => "screen AND (min-width: 962px)" %>
    <%= stylesheet_link_tag "print", :media => "print" %>

    <!-- Modernizr -->
    <%= javascript_include_tag  "vendor/modernizr" %>
    <!-- Typekit -->
    <script type="text/javascript" src="http://use.typekit.net/fmy2orf.js"></script>
    <script type="text/javascript">try{Typekit.load();}catch(e){}</script>
    <!-- GA -->
    <script type="text/javascript">
      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', 'UA-28959393-1']);
      _gaq.push(['_setDomainName', 'craigmorey.co.uk']);
      _gaq.push(['_trackPageview']);
      (function() {
        var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();
    </script>
  </head>
  <body class="<%= page_classes %>">
    <%= yield %>

    <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.10.1/jquery.min.js"></script>
    <%= javascript_include_tag  "all" %>
  </body>
</html>