<!doctype html>
<html>
  <head>
    <meta charset="utf-8" />
    <title><%= current_page.data.title || "Craig Morey - web and UX developer in London" %></title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="robots" content="noindex, nofollow">

    <link rel="icon" type="image/x-icon" href="<%= site_root %>favicon.ico" />
    <link rel="icon" type="image/png" href="<%= site_root %>favicon.png" />

    <%= stylesheet_link_tag "fonts", :media => "screen" %>
    <%= stylesheet_link_tag "#{@section}/style", :media => "screen" %>

    <!-- Modernizr -->
    <%= javascript_include_tag  "vendor/modernizr" %>
    <!-- Typekit -->
    <script type="text/javascript" src="http://use.typekit.net/fmy2orf.js"></script>
    <script type="text/javascript">try{Typekit.load();}catch(e){}</script>
    <!-- GA -->
    <script type="text/javascript">
      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', 'UA-28959393-1']);
      _gaq.push(['_setDomainName', 'craigmorey.co.uk']);
      _gaq.push(['_trackPageview']);
      (function() {
        var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();
    </script>
  </head>
  <body class="<%= page_classes %>">
    <%= yield %>

    <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.10.1/jquery.min.js"></script>
    <%= javascript_include_tag  "#{@section}/all" %>
  </body>
</html>